	AS 'MODULE_PATHNAME'
	LANGUAGE C
	PARALLEL SAFE
	IMMUTABLE
	STRICT;

COMMENT ON FUNCTION smoc_overlap_neg (smoc, smoc) IS 'overlaps not';

CREATE OPERATOR !&& (
	LEFTARG    = smoc,
	RIGHTARG   = smoc,
	PROCEDURE  = smoc_overlap_neg,
	COMMUTATOR = '!&&',
	NEGATOR    = '&&',
	RESTRICT   = contsel,
	JOIN       = contjoinsel
);

COMMENT ON OPERATOR !&& (smoc, smoc) IS 'overlaps not';

