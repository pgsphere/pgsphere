	AS 'MODULE_PATHNAME'
	LANGUAGE C
	PARALLEL SAFE
	IMMUTABLE
	STRICT;

COMMENT ON FUNCTION smoc_union (smoc, smoc) IS 'union';

CREATE OPERATOR | (
	LEFTARG   = smoc,
	RIGHTARG  = smoc,
	PROCEDURE = smoc_union
);

COMMENT ON OPERATOR | (smoc, smoc) IS 'union';

CREATE AGGREGATE sum (smoc) (
	SFUNC = smoc_union,
	STYPE = smoc
);

COMMENT ON AGGREGATE sum (smoc) IS 'smoc union aggregate';

